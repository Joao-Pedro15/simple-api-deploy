{
  "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": ["ES6"],
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": false,
      "strict": false,
      "removeComments": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "typeRoots": ["./src/@types", "node_modules/@types"],
  },
  "include": [
      "src/**/*"
, "src/index.ts"  ],
  "exclude": [ 
      "public"
   ]
}